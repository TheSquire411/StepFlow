{
  "name": "@stepflow/api",
  "version": "1.0.0",
  "description": "StepFlow backend API services",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf dist node_modules",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:up": "tsx src/scripts/migrate.ts up",
    "migrate:down": "tsx src/scripts/migrate.ts down",
    "migrate:status": "tsx src/scripts/migrate.ts status"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@sentry/node": "^7.0.0",
    "@sentry/profiling-node": "^1.0.0",
    "@types/uuid": "^10.0.0",
    "aws-sdk": "^2.1419.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.0.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.1",
    "ioredis": "^5.3.2",
    "rate-limit-redis": "^4.0.0",
    "sharp": "^0.32.4",
    "uuid": "^8.0.0",
    "validator": "^13.11.0",
    "winston": "^3.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.11.0",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "vitest": "^0.34.1"
  }
}
